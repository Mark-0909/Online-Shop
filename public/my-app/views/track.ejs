        <div class="form-box login">
            <h2>Login</h2>
            <form action="/logintrack" method="post">
                <div class="input-box">
                    <span class="loginicon"><i class='bx bxs-envelope'></i></i></span>
                    <input type="email" name="email" required>
                    <label>Email</label>
                </div>
