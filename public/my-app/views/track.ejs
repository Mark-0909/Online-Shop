                <br><br>
                <div class="login-register">
                    <p>Don't have an account? <a href="#" class="register-link">Register</a></p>
                </div>
            </form>
        </div>
        <div class="form-box register">
            <h2>Registration</h2>
            <form id="registration-form" action="/registertrack" method="post">
                <div class="input-box">
                    <span class="loginicon"><i class='bx bxs-user'></i></span>
                    <input type="text" name="username" required>
                    <label>Username</label>
                </div>
                <div class="input-box">
                    <span class="loginicon"><i class='bx bxs-envelope'></i></span>
                    <input type="email" name="email" required>
                    <label>Email</label>
                </div>
                <div class="input-box">
                    <span class="loginicon"><i class='bx bxs-lock-alt'></i></span>
                    <input type="password" name="password" required>
                    <label>Password</label>
                </div>
                <button type="submit" class="submitbtn">Submit</button>
                <br><br>
                <div class="login-register">
                    <p>Already have an account? <a href="#" class="login-link">Login</a></p>
                </div>
            </form>
        </div>
    </div>
    

    <div class="ordertrack">
        <p>TRACK YOUR ORDER HERE:</p>
        <form action="/track" method="get">
            <input type="text" name="orderId" id="orderIdInput" pattern="[A-Za-z0-9]{24}" maxlength="24" placeholder="Enter 24 Characters Order ID" required>
            <button type="submit">TRACK</button>
          </form>
          
          
          
          
                 
    </div>
    <br>
    <hr>
    <% if (matchedOrder) { %>
        <div class="orderItemscontainer" id="orderedItemContainer_<%= matchedOrder._id %>" style="width: 900px;margin-left: 55px;">
          <div class="orderedItems" style="display: flex; align-items: center;">
            <p class="starlalu" style="margin-left: 30px;"><%= matchedOrder._id %></p>
            <p class="starlalu" style="margin-left: 400px; position: absolute;">In process...</p>
          </div>
      
          <div class="orderedItemsPrice">
            <% function calculateTotalPrice(item) {
              let totalPrice = 0;
              item.cartItems.forEach(cartItem => {
                totalPrice += cartItem.totalPrice;
              });
              return totalPrice;
            } %>
            <p class="starlaluprice" style="margin-left: 300px;">
              â‚±<%= calculateTotalPrice(matchedOrder) + matchedOrder.region %> (COD)
            </p>
          </div>
        </div>
      <% } else { %>
        <p style="text-align: center; font-size: 30px;">No matching order found.</p>
      <% } %>
      



    
