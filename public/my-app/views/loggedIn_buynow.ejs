  <link rel="stylesheet" href="/css/login.css">
  <link rel="stylesheet" href="/css/logggedIn.css">
  <link rel="stylesheet" href="/css/footer.css">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
</head>

<body class="body">
  <header class="center">
    <img alt="logo" src="/images/logo.png" height="150px" width="200px">
    <nav class="navbar">
      <a href="/loggedIn_home/<%= userIdentifier %>">HOME</a>
      <a href="/loggedIn_shop/<%= userIdentifier %>">SHOP</a>
      <a href="#">CONTACTS</a>
      <a href="#">ABOUT</a>
    </nav>
    <br><br><br><br>
    <form action="/loggedIn_search/<%= userIdentifier %>" method="GET">
      <div class="field-group" style="margin-top: 18px;">
        <input type="search" placeholder="Search here" name="query">
        <button type="submit" style="border: none; background-color: white;">
          <div class="searchicon">
            <i class='bx bx-search'></i>
          </div>
        </button>
      </div>
    </form>
    </div>

    <button class="btnCart-popup" onclick="window.location.href = '/loggedIn_addtocart/<%= userIdentifier %>';">
      <div class="carticon">
        <i class='bx bx-cart'></i>
      </div>
    </button>
    <button class="btnLogin-popup" onclick="toggleDropDown()">
      <div class="usericon">
        <i class='bx bx-user-circle'></i>
        <p><%= username %></p>
      </div>
    </button>
  </header>
  <div class="drop-down" id="drop-down" style="margin-top: -70px; margin-left: 900px;">
    <a href="/loggedIn_orders/<%= userIdentifier %>">
      <div class="view-profile">
        <p>My Purchase <i class='bx bx-user'></i></p>
      </div>
    </a>
    <a href="/logoutprod1/<%= product._id %>">
      <div class="logout">
        <p>Logout <i class='bx bx-power-off'></i></p>
      </div>
    </a>
  </div>
  <div class="product1">
    <div class="headcap">
      <a href="#" onclick="history.back()">
        <i class='bx bx-left-arrow-alt'></i>
      </a>
      <p>Place Order</p>
    </div>
    <hr>
    <br>


    <form id="letsBuynow" class="letsBuynow" action="/loggedIn_buynow/<%= userIdentifier %>/<%= product._id %>"
      method="POST">
      <div class="buynowprodinfo">
        <div class="buynowimgproduct">
          <img src="/<%= product.productImages[0] %>">
        </div>
        <div class="buynowdetails" style="margin-left: 50px;">
          <p><%= product.productName %></p>
          <p>₱  <%= product.productPrice %></p>
          
        </div>
        
      </div>
      <div class="variations2">
        <input type="radio" name="varies1" value="1" id="var1" checked="checked">
        <label for="var1">
          <div class="var 1">
            <img src="/<%= product.productImages[4] %>">
            <p><%= product.variations[0].name %></p>
          </div>
        </label>
        <input type="radio" name="varies1" id="var2" value="2">
        <label for="var2">
          <div class="var 2">
            <img src="/<%= product.productImages[5] %>">
            <p><%= product.variations[1].name %></p>
          </div>
        </label>
        <input type="radio" name="varies1" value="3" id="var3">
        <label for="var3">
          <div class="var 3">
            <img src="/<%= product.productImages[6] %>">
            <p><%= product.variations[2].name %></p>
          </div>
        </label>

        <p class="QuantityP" style="margin-left: 180px;">Quantity: </p>
        <input class="inputnum" name="inputnum" type="number" min="1" value="1" required>

      </div>
      <hr style="position: absolute; margin-top: 430px; width: 1000px;">
      <div class="buynowdelivdetails">
        <div class="titleNgdelivery">
          <p>Delivery Details</p>
        </div>
        <div class="userinfo">
          <div class="custName">
            <label for="name">Name: </label>
            <input type="text" name="name" placeholder="Type here..." required>
          </div>
          <div class="custNum">
            <label for="telno">Telephone no.: </label>
            <input type="tel" name="telno" placeholder="Type here..." required>
          </div>
          <div class="custRegion">
            <label for="region">Region</label>
            <select name="region" id="region">
              <option value="75">Luzon</option>
              <option value="100">Visayas</option>
              <option value="150">Mindanao</option>
            </select>
          </div>
          <div class="province">
            <label for="province">Province: </label>
            <input type="text" name="province" placeholder="Type here..." required>
          </div>
          <div class="municipality">
            <label for="municipality">Municipality: </label>
            <input type="text" name="municipality" placeholder="Type here..." required>
          </div>
          <div class="barangay">
            <label for="barangay">Barangay: </label>
            <input type="text" name="barangay" placeholder="Type here..." required>
          </div>
          <div class="completeAdd">
            <label for="address">Address: </label>
            <textarea name="address" id="" cols="30" rows="10" placeholder="Type here..."></textarea>
          </div>
          <input type="hidden" name="prodID" value="<%= product._id %>">
  <input type="hidden" name="prodname" value="<%= product.productName %>">
  <input type="hidden" name="productLink" value="/loggedIn_shop/<%= userIdentifier %>/<%= product._id %>">
          <div class="submitbuynowDelDetBTN">
            <button type="submit">Submit</button>
          </div>
          <div class="totalofeverychuchu">
            <p id="productPrice" data-price="<%= product.productPrice %>" style="margin-left: 170px;">₱ <%= product.productPrice %></p>
          <br>
          <div class="shippingandtotal">
            <div class="shippingFeeLVM" style="display: flex; align-items: center; margin-top: -30px;">
              <p>Shipping Fee: </p>
              <p id="shippingFee" style="margin-left: 80px;">₱ 75</p>
            </div>
            <hr>
            <div class="priceplusshipping" style="display: flex;">
              <p>Total: </p>
              <p id="totalPrice" style="text-align: right; width: 180px;">₱ 0</p>
            </div>
          </div>
          
          
          <br>
          
          
          
        </div>
      </div>
      
    </form>
    

<br>
<br><br>
